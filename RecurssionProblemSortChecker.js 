//Recurssion Problem Sort Checker

const isSort = (a = [], len = a.length)=>{
    //base length
    if(len <= 1)
        return true

    //calcualtion
    let last = a[len - 1]
    a.length = len-1 //will pop last element
    
    //recursive call
    return ((last >= a[a.length-1]) ? isSort(a) : false)
}

let a = [0]



console.log(isSort(a))